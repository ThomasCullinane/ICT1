{{> menu id="settings"}}

<div class="ui two column middle aligned grid basic segment">
  
  <div class="column">
    <form class="ui stacked segment form" action="/settings/update" method="POST">
      <h3 class="ui header">Update Details</h3>
      <div class="one field">
        <div class="field">
          <label>Name</label>
          <input placeholder="{{user.name}}" type="text" name="name">
        </div>
      </div>
      <div class="three fields">
        <div class="field">
          <div class="ui right labeled input">
            <input placeholder="{{user.height}}" type="number" name="height">
            <div class="ui basic label">
              m
            </div>
          </div>
        </div>
        <div class="field">
          <div class="ui right labeled input">
            <input placeholder="{{user.weight}}" type="number" name="weight">
            <div class="ui basic label">
              kg
            </div>
          </div>
        </div>
        <div class="field" >
          <input placeholder="{{user.gender}}" type="text" name="gender">
        </div>
      </div>
      <div class="field">
        <label>Email</label>
        <input placeholder="{{user.email}}" type="text" name="email">
      </div>
      <div class="field">
        <label>Password</label>
        <input type="password" name="password">
      </div>
      <button class="ui blue submit button">Submit</button>
    </form>
  </div> 
  <div class="column">
    <img class="ui image" src="https://cdn.glitch.com/66c07852-af90-498c-9391-8e09e0829205%2Fseticon.jpg?v=1599158724344">
  </div>
</div>