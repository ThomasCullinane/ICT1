<section class="ui segment">
  <div class="ui four small statistics">
    <div class="ui statistic">
      <div class="value">  
        <i class="user icon"></i>
      </div>
      <div class="label">
        {{user.name}}
      </div>
    </div>

    <div class="ui statistic">
      <div class="value">
        {{#if isIdealBodyWeight}}
        <i class="green dashboard icon"></i> 
        {{else }}
        <i class="red dashboard icon"></i>
        {{/if}}
      </div>
      <div class="label">
        Ideal Weight Indicator
      </div>
    </div>

    <div class="ui statistic">
      <div class="value">
        <i class="heartbeat icon">{{BMI}}</i> 
      </div>
      <div class="label">
        BMI
      </div>
    </div>

    <div class="ui statistic">  
      <div class="value">
        <i class="user md icon"></i>
      </div>
      <div class="label">
        {{BMICategory}}
      </div>
    </div>
  </div>
</section>
